<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GameModManager.Views.YesNoView"
             MaxWidth="500">
  <Panel>
    <Grid RowDefinitions="auto, auto">
      <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Text}"></TextBlock>
      <StackPanel Margin="0,5,0,0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
        <Button Command="{Binding YesCommand}" Content="Yes"></Button>
        <Button Command="{Binding NoCommand}" Content="No"></Button>
      </StackPanel>
    </Grid>

  </Panel>

</UserControl>
